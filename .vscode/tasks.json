{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build PersonalEconomyTracker",
            "type": "shell",
            "command": "cmake",
            "args": ["--build", "build"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Build the PersonalEconomyTracker application using CMake and MinGW",
        },
        {
            "label": "KillApp",
            "type": "shell",
            "command": "taskkill /IM PrivateEconomyTracker.exe /F >nul 2>&1",
            "problemMatcher": [],
            "detail": "Kill the running PrivateEconomyTracker application if it is open",
            "options": {
                "shell": {
                    "executable": "cmd.exe",
                    "args": ["/d", "/c"]
                }
            }
        },
        {
            "label": "Run PersonalEconomyTracker",
            "type": "shell",
            "options": { "cwd": "${workspaceFolder}/build" },
            "command": "./PersonalEconomyTracker.exe",
            "group": "none",
            "detail": "Run PersonalEconomyTracker without debugging"
            
        },
        {
            "label": "BuildAndRun PersonalEconomyTracker",
            "dependsOn": ["Build PersonalEconomyTracker", "Run PersonalEconomyTracker"],
            "dependsOrder": "sequence",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Build and then run PersonalEconomyTracker in one step"
        }
    ]
}

